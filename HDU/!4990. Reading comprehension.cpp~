#include <iostream>
#include <cstdio>
using namespace std;

__int64 fastMod(__int64 num, __int64 m)
{
    __int64 temp = 4;
    __int64 res = 1;

    while(num)
    {
        if (num % 2)
            res = (res * temp) % m;
        temp = (temp * 4) % m;
        num /= 2;
    }
    return res;
}

int main()
{
    __int64 n, m;
    while(cin >> n >> m)
    {
        __int64 t, a1;
        if (n % 2)
        {
            a1 = 1;
            t = (n - 1) / 2 + 1;
        }
        else
        {
            a1 = 2;
            t = n / 2;
        }
        __int64 k = (a1 * (fastMod(t, m) - 1)) % m;
        
        if (k == 0)
            k = m;
        while(k % 3 != 0)
             k = (k + m);
        cout << (k / 3) % m << endl;
    }
    return 0;
}
