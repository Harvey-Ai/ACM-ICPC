#include <iostream>
using namespace std;

int main()
{
	int ncase;
	cin >> ncase;

	while(ncase--)
	{
		int m, n;
		cin >> m >> n;
		
		int dp[15][15];
		for(int i = 0;i < 15;i++)
			for(int j = 0;j < 15;j++)
				dp[i][j] = 0;
		for(int i = 0;i < 15;i++)
			dp[0][i] = 1;


		for(int i = 1;i <= m;i++)
			for(int j = 1;j <= n;j++)
				if (j > i)
					dp[i][j] = dp[i][i];
				else
					dp[i][j] = dp[i][j - 1] + dp[i - j][j];

		cout << dp[m][n] << endl;
	}
	return 0;
}
