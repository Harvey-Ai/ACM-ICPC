#include <iostream>
#include <cstdio>
#include <cstring>
using namespace std;

int arr[10005];
int main()
{
	int ncase;

	cin >> ncase;
	while(ncase--)
	{
		int n;
		cin >> n;
		for(int i = 0;i < n;i++)
			cin >> arr[i];
		
		int res = 0;
		for(int i = 0;i < n;i++)
			if (arr[i])
			{
				int pos = i;
				while(arr[pos])
				{
                    int nextPos = arr[pos] - 1;
					arr[pos] = 0;
                    pos = nextPos;
                    res++;
				}
				res--;
			}

		cout << res << endl;
		
	}

	return 0;
}
