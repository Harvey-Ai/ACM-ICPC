#include <stdio.h>

long long arr[500005];
int used[10000000];

int main()
{
	int i, a, temp;
	arr[0] = 0;

	for(i = 1;i < 500001;i++)
	{
		temp = arr[i-1] - i;
		if(temp > 0 && !used[temp] )
		{
			arr[i] = temp;
			used[temp] = 1;
		}
		else
		{
			arr[i] = arr[i-1] + i;
			used[arr[i]] = 1;
		}
	}

	while(scanf("%d", &a), a != -1)
		printf("%lld\n", arr[a]);
	return 0;
}
