#include <iostream>
#include <cstring>
#include <cstdio>
using namespace std;

int arr[32005];
int N = 32001;
int lowBit(int t)
{
	return t - (t & (t - 1));
}

void add(int k, int v)
{
	for(int i = k;i <= N;i += lowBit(i))
		arr[i] += v;
}

int sum(int k)
{
	int res = 0;
	while(k > 0)
	{
		res += arr[k];
		k -= lowBit(k);
	}
	return res;
}

int res[15005];
int main()
{
	int n;
	cin >> n;
	memset(res, 0, sizeof(res));
	
	for(int i = 0;i < n;i++)
	{
		int x, y;
		scanf("%d %d", &x, &y);
		res[sum(x + 1)]++;
		add(x + 1, 1);
	}

	for(int i = 0;i < n;i++)
		cout << res[i] << endl;
	
	return 0;
}
