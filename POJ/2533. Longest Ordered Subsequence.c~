#include <stdio.h>
#define N 1005

int arr[N], tailM[N];

int Bsearch(int element, int n)
{
	int low = 0, high = n, mid;

	while(low <= high)
	{
		mid = (low + high) / 2;
		if (tailM[mid] == element)
			return mid;
		else
		{
			if (tailM[mid] > element)
				high = mid - 1;
			else
				low = mid + 1;
		}
	}
	return low;
}

int main()
{
	int i, n, res, pos;
	while(scanf("%d", &n) != EOF)
	{
		for(i = 0;i < n;i++)
			scanf("%d", &arr[i]);

		res = 0;
		tailM[0] = arr[0];
		for(i = 1;i < n;i++)
		{
			if (tailM[res] < arr[i])
			{
				res++;
				tailM[res] = arr[i];
			}
			else
			{
				pos = Bsearch(arr[i], res);
				tailM[pos] = arr[i];
			}
		}
		printf("%d\n", res + 1);
	}
	return 0;
}

