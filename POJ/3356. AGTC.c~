#include <stdio.h>
#define N 1005

int dp[N][N];

int main()
{
	int i, j, n1, n2, temp, res;
	char s1[N], s2[N];

	while(scanf("%d", &n1) != EOF)
	{
		scanf("%s", s1);
		scanf("%d", &n2);
		scanf("%s", s2);

		dp[0][0] = 0;
		for(i = 0;i <= n1;i++)
			dp[i][0] = i;

		for(i = 0;i <= n2;i++)
			dp[0][i] = i;

		for(i = 1;i <= n1;i++)
			for(j = 1;j <= n2;j++)
			{
				dp[i][j] = dp[i-1][j-1];
				if (s1[i-1] != s2[j-1])
					dp[i][j]++;

				if (dp[i-1][j] + 1 < dp[i][j])
					dp[i][j] = dp[i-1][j] + 1;
				
				if (dp[i][j-1] + 1 < dp[i][j])
					dp[i][j] = dp[i][j-1] + 1;
			}
		res = dp[n1][n2];

		printf("%d\n", res);
	}
	return 0;
}
