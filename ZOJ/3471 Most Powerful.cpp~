#include <iostream>
#include <cstring>
#include <string>
#include <cstdlib>
using namespace std;

int graph[11][11];
int dp[1 << 10];
int main()
{
    int n;
	while(cin >> n, n)
	{
		for(int i = 0;i < n;i++)
			for(int j = 0;j < n;j++)
				cin >> graph[i][j];

        memset(dp, 0, sizeof(dp));
        
        for(int i = 0;i < (1 << n);i++)
            for(int j = 0;j < n;j++)
            {
                if ((1 << j) & i) continue;
                for(int k = 0;k < n;k++)
                {
                    if (((1 << k) & i) || k == j) continue;
                    dp[i | (1 << k)] = max(dp[i | (1 << k)], dp[i] + graph[j][k]);
                }
            }
                    
        int res = 0;
		for(int i = 0;i < (1 << n);i++)
            res = max(res, dp[i]);
                
         cout << res << endl;
	}
	
	return 0;
}