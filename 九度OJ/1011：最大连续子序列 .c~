#include <iostream>
using namespace std;

int main()
{
	int n;
	int sum, max;
	int arr[10000];
	int head, rear;
	int resH, resR;
	int i;

	while(cin >> n, n)
	{
		for(i = 0;i < n;i++)
			cin >> arr[i];

		sum = 0;
		max = -1;
		head = rear = 0;
		resH = resR = -1;
		for(i = 0;i < n;i++)
		{
			sum += arr[i];
			if (sum > max)
			{
				max = sum;
				rear = i;
				resH = head;
				resR = rear;
			}
			else if (sum < 0)
			{
				head = i + 1;
				sum = 0;
			}
		}
		if (max == -1)
			cout << 0 << " " << arr[0] << " " << arr[n - 1] << endl;
		else
			cout << max << " " << arr[resH] << " " << arr[resR] << endl;
	}
	return 0;
}
