#include <iostream>
#include <cstring>
using namespace std;

int g[1005][1005];
int used[1005];
int n;

int dfs(int p)
{
	for(int i = 1;i <= n;i++)
		if (i != p && !used[i] && g[p][i])
		{
			used[i] = 1;
			dfs(i);
		}
}

int main()
{
	int i, m;
	int a, b;
	while(cin >> n, n)
	{
		memset(g, 0, sizeof(g));
		cin >> m;
		for(i = 0; i < m;i++)
		{
			cin >> a >> b;
			g[a][b] = g[b][a] = 1;

		}

		int res = 0;
		memset(used, 0, sizeof(used));
		
		for(i = 1;i <= n;i++)
			if (!used[i])
			{
				used[i] = 1;
		//		cout << i << endl;
				res++;
				dfs(i);
			}
		cout << res - 1 << endl;
	}
	return 0;
}
