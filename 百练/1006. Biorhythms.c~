#include <stdio.h>

int main()
{
	int p, e, i, d;
	int first1, first2, first3;
	int icase = 1;
	int ans;
	
	while(scanf("%d %d %d %d", &p, &e, &i, &d), d != -1)
	{
		first1 = ((-p % 23) + 23) % 23;
		first2 = ((-e % 28) + 28) % 28;
		first3 = ((-i % 33) + 33) % 33;

		first1 = (d + first1) % 23;
		first2 = (d + first2) % 28;
		first3 = (d + first3) % 33;

		first1 = (1 + first1) % 23;
		first2 = (1 + first2) % 28;
		first3 = (1 + first3) % 33;
		ans = 1;
		while(first1 != 0 || first2 != 0 || first3 != 0)
		{
			first1 = (1 + first1) % 23;
			first2 = (1 + first2) % 28;
			first3 = (1 + first3) % 33;
			ans++;
		}
		printf("Case %d: the next triple peak occurs in %d days.\n", icase++, ans);
	}
	return 0;
}
