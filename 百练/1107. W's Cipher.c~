#include <iostream>
using namespace std;

int main()
{
	int k1, k2, k3;
	char str[10000], str2[10000];
	int arr1[10000], arr2[10000], arr3[10000];
	int i;

	while(cin >> k1 >> k2 >> k3, k1 || k2 || k3)
	{
		cin >> str;
		int index1, index2, index3;
		index1 = index2 = index3 = 0;

		for(i = 0;str[i] != '\0';i++)
		{
			if (str[i] >= 'a' && str[i] <= 'i')
				arr1[index1++] = i;
			else if (str[i] >= 'j' && str[i] <= 'r')
				arr2[index2++] = i;
			else if (str[i] >= 's' && str[i] <= 'z' || str[i] == '_')
				arr3[index3++] = i;
		}

		int temp1, temp2, temp3;
		temp1 = temp2 = temp3 = 0;
		for(i = 0;str[i] != '\0';i++)
		{
			if (str[i] >= 'a' && str[i] <= 'i')
			{
				str2[arr1[(temp1 + k1) % index1]]= str[i];
				temp1++;
			}
			else if (str[i] >= 'j' && str[i] <= 'r')
			{
				str2[arr2[(temp2 + k2) % index2]]= str[i];
				temp2++;
			}
			else if (str[i] >= 's' && str[i] <= 'z' || str[i] == '_')
			{
				str2[arr3[(temp3 + k3) % index3]]= str[i];
				temp3++;
			}
		}

		str2[i] = '\0';
		cout << str2 << endl;
	}
	return 0;
}
