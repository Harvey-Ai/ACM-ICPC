#include <iostream>
#include <algorithm>
using namespace std;

int main()
{
	int n;
	double arr[250005];

	cin >> n;
	for(int i = 0;i < n;i++)
		cin >> arr[i];
	sort(&arr[0], &arr[n]);

	cout.precision(1);
	cout.setf(ios::fixed);
	if (n % 2)
		cout << arr[n / 2] << endl;
	else
		cout << (arr[n / 2] + arr[n / 2 - 1]) / 2 << endl;
	return 0;
}
