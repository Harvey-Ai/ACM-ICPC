#include <iostream>
using namespace std;

int main()
{
	int ncase;
	int n, i;
	int arr[10000];
	cin >> ncase;
	while(ncase--)
	{
		cin >> n;
		for(i = 0;i < n;i++)
			cin >> arr[i];

		if (n == 1 || arr[0] != arr[1])
			cout << 0 << " ";

		for(i = 1;i < n - 1;i++)
			if (arr[i] > arr[i - 1] && arr[i] > arr[i + 1] || arr[i] < arr[i + 1] && arr[i] < arr[i - 1])
				cout << i << " ";

		if (n != 1 && arr[n - 1] != arr[n - 2])
			cout << n - 1;
		cout << endl;
	}
	return 0;
}
