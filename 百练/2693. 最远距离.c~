#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

#define dis(x, y) ((x) * (x) + (y) * (y))

int main()
{
	int n;
	double p[10000][2];
	double max;
	int i, j;

	cout.precision(4);
	cout.setf(ios::fixed);
	cin >> n;
	for(i = 0;i < n;i++)
		cin >> p[i][0] >> p[i][1];

	for(i = 0;i < n;i++)
		for(j = i + 1;j < n;j++)
			if (dis(p[i][0] - p[j][0], p[i][1] - p[j][1]) > max)
				max = dis(p[i][0] - p[j][0], p[i][1] - p[j][1]);

	cout << sqrt(max) << endl;
	return 0;
}
