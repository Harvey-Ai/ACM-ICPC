#include <stdio.h>

int main()
{
	float pre, now, res;
	float d1, d2;
	int n;
	while(scanf("%d", &n) != EOF)
	{
	scanf("%f", &pre);
	scanf("%f", &now);
	d1 = pre;
	d2 = now;
	res = pre / now;
	pre = now;
	n -= 2;
	//printf("%d\n", n);

	while(n--)
	{
		scanf("%f", &now);
	//	if (now == 0.0)
	//	{
	//		pre = 0;
	//		continue;
	//	}
		if (pre / now > d1 / d2)
		{
			d1 = pre;
			d2 = now;
			res = pre / now;
		}
		pre = now;
	//	printf("%d\n", n);
	}

	printf("%f / %f = %f\n", d1, d2, res);
	}
	return 0;
}
