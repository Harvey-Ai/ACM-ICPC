#include <iostream>
using namespace std;
int main()
{
	int n;
	int i, j;
	int dp[200][200];
	int arr[200][200];
	int a, b;
	int max;
	cin >> n;

	for(i = 0;i < n;i++)
		for(j = 0;j <= i;j++)
			cin >> arr[i][j];


	dp[0][0] = arr[0][0];
	for(i = 1;i < n;i++)
		for(j = 0;j <= i;j++)
		{
			if (j > 0)
				a = dp[i - 1][j - 1];
			else
				a = 0;
			if (j < i)
				b = dp[i - 1][j];
			else
				b = 0;
			dp[i][j] = a > b ? a : b;
			dp[i][j] += arr[i][j];
		}

	max = 0;
	for(i = 0;i < n;i++)
		if (dp[n - 1][i] > max)
			max = dp[n - 1][i];

	cout << max << endl;
	return 0;
}
