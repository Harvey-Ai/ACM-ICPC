#include <iostream>
#include <cstring>
using namespace std;

int main()
{
	int m, t;
	int i, j;
	int v, time;
	int value[1005];
	cin >> t >> m;

	memset(value, -1, sizeof(value));
	value[0] = 0;

	for(i = 0; i < m;i++)
	{
		cin >> time >> v;
		for(j = t - time;j >=0 ;j--)
			if (value[j] != -1)
			{
				if (value[j + time] == -1 || value[j + time] < value[j] + v)
					value[j + time] = value[j] + v;
			}
	}

	int max = 0;
	for(i = t;i >= 0;i--)
		if (value[i] > max)
			max = value[i];

	cout << max << endl;

	return 0;
}
