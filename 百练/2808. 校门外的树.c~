#include <iostream>
#include <cstring>
#include <string>
using namespace std;

int flag[1000006];

int main()
{
	int l, m;
	int i, j;
	int b, e;

	while(cin >> l >> m)
	{
		memset(flag, 0, sizeof(flag));
		for(i = 0;i < m;i++)
		{
			cin >> b >> e;
			for(j = b;j <= e;j++)
				flag[j] = 1;
		}
		int res = 0;
		for(i = 0;i <= l;i++)
			if (flag[i] == 0)
				res++;
		cout << res << endl;
	}
	return 0;
}

