#include <iostream>
#include <cstring>
using namespace std;

int m, n;
int used[50][50];
char str[50][50];
int res;

void dfs(int x, int y)
{
	if (x < 0 || x >= n)
		return;
	if (y < 0 || y >= m)
		return;

	if (used[y][x])
		return;

//	cout << str[y][x] << endl;
	if (str[y][x] == '.' || str[y][x] == '@')
	{
		res++;
		used[y][x] = 1;
		dfs(x + 1, y);
		dfs(x - 1, y);
		dfs(x, y - 1);
		dfs(x, y + 1);
	}
}

int main()
{
	int i, j;
	int posX, posY;
	while(cin >> n >> m, n != 0 && m != 0)
	{
		for(i = 0;i < m;i++)
			cin >> str[i];

		for(i = 0;i < m;i++)
			for(j = 0;j < n;j++)
				if (str[i][j] == '@')
				{
					posX = j;
					posY = i;
					break;
				}

		memset(used, 0, sizeof(used));
		res = 0;
		dfs(posX, posY);
		cout << res << endl;
	}
}
