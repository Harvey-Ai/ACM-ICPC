#include <stdio.h>

char group[3][100];
int pos[3][100];
char res[100];

int main()
{
	int i;
	int k1, k2, k3;
	int num1, num2, num3;
	char str[500];
	while(scanf("%d %d %d", &k1, &k2, &k3), k1 || k2 || k3)
	{
		scanf("%s", str);
		num1 = num2 = num3 = 0;
		for(i = 0;str[i] != '\0';i++)
		{
			if (str[i] >= 'a' && str[i] <= 'i')
			{
				pos[0][num1] = i;
				group[0][num1++] = str[i];
			}
			else if (str[i] >= 'j' && str[i] <= 'r')
			{
				pos[1][num2] = i;
				group[1][num2++] = str[i];
			}
			else
			{
				pos[2][num3] = i;
				group[2][num3++] = str[i];
			}
		}

		for(i = 0;i < num1;i++)
			res[pos[0][(i + k1 + num1) % num1]] = group[0][i];
		for(i = 0;i < num2;i++)
			res[pos[1][(i + k2 + num2) % num2]] = group[1][i];
		for(i = 0;i < num3;i++)
			res[pos[2][(i + k3 + num3) % num3]] = group[2][i];

		for(i = 0;str[i] != '\0';i++)
			putchar(res[i]);
		putchar('\n');
	}
	return 0;
}
