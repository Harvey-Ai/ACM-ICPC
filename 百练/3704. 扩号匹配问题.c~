#include <stdio.h>
#include <string.h>

int main()
{
	char str[105];
	int ans[101];
	int stack[101];
	int top;
	int i;
	while(scanf("%s", str) != EOF)
	{

		top = 0;
		memset(ans, 0, sizeof(ans));
		for(i = 0;str[i] != '\0';i++)
			if (str[i] == '(')
				stack[top++] = i;
			else if (str[i] == ')')
			{
				if (top <= 0)
					ans[i] = 1;
				else
					top--;
			}
		for(;top > 0;top--)
			ans[stack[top - 1]] = -1;

		printf("%s\n", str);
		for(i = 0;str[i] != '\0';i++)
		{
			if (ans[i] == 0)
				putchar(' ');
			if (ans[i] == -1)
				putchar('$');
			if (ans[i] == 1)
				putchar('?');
		}
		putchar('\n');
	}
	return 0;
}
