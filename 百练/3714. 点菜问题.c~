#include <stdio.h>
#include <string.h>

int dp[105][1001];
int main()
{
	int n, c;
	int i, j, max;
	int vv[105], pp[105];

	while(scanf("%d %d", &c, &n) != EOF)
	{
		for(i = 0;i < n;i++)
			scanf("%d %d", &pp[i], &vv[i]);

		memset(dp, 0, sizeof(dp));
		dp[0][pp[0]] = vv[0];
		for(i = 1;i < n;i++)
		{
			for(j = 0;j <= 1000;j++)
			{
				max = dp[i - 1][j];
				if (j - pp[i] >= 0 && max < dp[i - 1][j - pp[i]] + vv[i])
					max = dp[i - 1][j - pp[i]] + vv[i];
				dp[i][j] = max;
			}
		}
		max = 0;
		for(i = 0;i <= c;i++)
			if (max < dp[n - 1][i])
				max = dp[n - 1][i];
		printf("%d\n", max);
	}
	return 0;
}

