#include <stdio.h>


int minZ(int *arr, int n)
{
	int i;
	int min = 10000001;
	for(i = 0;i < n;i++)
		if (arr[i] < min && arr[i] > 0)
			min = arr[i];
	return min;
}

int maxF(int *arr, int n)
{
	int i;
	int max = -10000001;
	for(i = 0;i < n;i++)
		if (arr[i] > max && arr[i] < 0)
			max = arr[i];
	return max;
}

int minF(int *arr, int n)
{
	int i;
	int min = 0;
	for(i = 0;i < n;i++)
		if (arr[i] < min && arr[i] < 0)
			min = arr[i];
	return min;
}


int main()
{
	int ncase;
	int i;
	int n;
	int zz, ff, zh;
	int arr[1005];


	scanf("%d", &ncase);

	while(ncase--)
	{
		scanf("%d", &n);
		for(i = 0;i < n;i++)
			scanf("%d", &arr[i]);

		ff = zz = zh = 0;
		for(i = 0;i < n;i++)
		{
			if (arr[i] == 0)
				zz++;
			if (arr[i] < 0)
				ff++;
			if (arr[i] > 0)
				zh++;
		}
		if (zz == 0)
		{
			if (ff % 2 == 0)
			{
				if (zh != 0)
					printf("%d\n", minZ(arr, n));
				else
					printf("%d\n", minF(arr, n));
			}
			else
				printf("%d\n", maxF(arr, n));
		}
		else if (zz == 1)
		{
			if (ff % 2 == 0)
				printf("0\n");
			else
			{
				if (arr[0] != 0)
					printf("%d\n", arr[0]);
				else
					printf("%d\n", arr[1]);
			}
		}
		else
			printf("%d\n", arr[0]);
	}
	return 0;
}
