#include <iostream>
using namespace std;

int main()
{
	int arr[105];
	double price[105];
	int i, n;
	while(cin >> n, n != -1)
	{
		for(i = 0;i < n;i++)
			cin >> arr[i] >> price[i];

		int book = 0;
		double sum, sum1, sum2;
		sum = sum1 = sum2 = 0;
		for(i = 0;i < n;i++)
		{
			sum += price[i] * arr[i];
			book += arr[i];
		}
		sum1 = sum2 = sum;
		if (sum > 100) sum1 = sum - 20;
		if (book > 3) sum2 = sum * 0.95;

		if (sum1 > sum2)
			cout << sum2 + 20<< endl;
		else
			cout << sum1 + 20<< endl;
	}
	return 0;
}
